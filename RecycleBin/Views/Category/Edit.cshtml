@model RecycleBin.Models.CategoryViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Add New Category
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-2">@Html.LabelFor(c => c.Code)</div>
                                    <div class="col-lg-10">@Html.TextBoxFor(c => c.Code, null, new { @class = "form-control" })</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-10">@Html.ValidationMessageFor(c => c.Code)</div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-2">@Html.LabelFor(c => c.Name)</div>
                                    <div class="col-lg-10">@Html.TextBoxFor(c => c.Name, null, new { @class = "form-control" })</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-10">@Html.ValidationMessageFor(c => c.Name)</div>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <div class="row top-right">
                                    <div class="col-lg-12">
                                        <button class="btn btn-success" type="reset"><i class="glyphicon glyphicon-refresh"></i> Cancel </button>
                                        <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-ok"></i> Update </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{ Html.RenderPartial("Category/_categoryDetails", Model); }


@section MySricpt
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
