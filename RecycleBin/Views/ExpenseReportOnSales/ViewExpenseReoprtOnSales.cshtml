@model RecycleBin.Models.PurchaseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h4>Expense Reoport on Sales</h4>
        </div>

        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Product</th>
                        <th>Re-Order Level</th>
                        <th>Sold Quantity</th>
                        <th>Cp(Tk)</th>
                        <th>M.R.P(Tk)</th>
                        <th>Profit</th>
                    </tr>
                </thead>
                @{ int sl = 0;}
                <tbody>
                    @foreach (var pv in Model.PurchaseViews)
                        {
                            <tr>
                                <td>@(++sl)</td>
                                <td>@pv.Product</td>
                                <td>@pv.ReOrderLevel</td>
                                <td>@pv.Quantity</td>
                                <td>@pv.UnitPrice</td>
                                <td>@pv.MRP</td>
                                <td>@pv.Profit</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
